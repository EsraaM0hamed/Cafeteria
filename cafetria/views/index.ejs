<!DOCTYPE html>
<html lang="en">
<head>
<title>Cafe</title>
<meta charset="utf-8">
<link rel="shortcut icon" type="image/x-icon" href="/css/images/favicon.ico">
<link rel="stylesheet" href="/css/style.css" type="text/css" media="all">
<script src="/js/jquery-1.8.0.min.js"></script>
<link rel="stylesheet" href="/stylesheets/makeOrder.css" >
<!--[if lt IE 9]><script src="js/modernizr.custom.js"></script><![endif]-->
<script src="/js/functions.js"></script>
<script src="/javascripts/jquery-3.2.1.js"></script>
<script src="/javascripts/makeOrder.js"></script>
</head>
<body>
<!-- wrapper -->
<div id="wrapper">
  <!-- header -->
  <div class="header">
    <!-- shell -->
    <div class="shell">
      <h1 id="logo"><a href="#">cafe</a></h1>

       <div class="cl">&nbsp;</div>
      <!-- end of header -->
      <!-- navigation -->
      <nav id="navigation">
        <ul>
          <li><a href="#">Homepage</a></li>
          <li><a href="#">About us</a></li>
          <li><a href="#">Our Menu</a></li>
          <li><a href="#">Reservations</a></li>
          <li><a href="#">Blog</a></li>
          <li><a href="#">Showcase</a></li>
          <li><a href="#">Contact Us</a></li>
        </ul>
      </nav>
      <!-- end of navigation -->
      <!-- slider-holder -->
      <div class="slider-holder"> <span class="left"></span> <span class="right"></span>
        <!-- flexslider -->
            <div class="user-info">
              <div class="row">
                <div class="center-block">
                  <img src="/images/11.jpg" alt="..."
                  class="user-image center">
                </div>
                <div><p id ="user-name"class="center">User name</p></div>
              </div>
            </div>
            <div class="search-row">
                <div class="">
                  <input class ="search-input"  type="search"  placeholder="Search the site..." />
                </div>
            </div>
        <!-- end of flexslider -->
      </div>
      <!-- end of slider -->
    </div>
    <!-- end of shell -->
  </div>
  <!-- end of header -->
  <!-- main -->
  <div class="main">
                    <div class="myOrders-list" >
                      <form id="order-form" method="post" action="/sendOrder">
                        <div id="order-items">
                        </div>
                         <textarea placeholder="add any note .."></textarea>
                         <br/>
                          <p>Room</p>
                          <select id="room-list" name="room">
                              <%rooms.forEach(function(room){%>
                                    <option value="<%=room%>"><%=room%></option>
                              <%});%>
                          </select>
                          <br />
                          <hr/>
                          <br />
                          <p style="text-align:right; padding-right:5px;" id="total-order">0</p>
                          <div class="center">
                            <button type="submit" id="submit-order" class="btn btn-default">Order</button>
                          </div>
                        </form>
                    </div>
                     <div class="left-block">
                        <div id="selected-products">
                        </div>
                          <hr  />
                          <div id="Products-list ">
                            <%  if(products){ %>
                                <%  products.forEach(function(product){ %>
                                  <div class="product">
                                      <img src="/images/<%= product.img%>"/>
                                      <small><%= product.id%></small>
                                      <p><%= product.name%></p>
                                      <p><%= product.price%> </p>
                                  </div>
                                <%});%>
                            <% } %>
                          </div>


    </div>
  </div>
</body>
</html>
