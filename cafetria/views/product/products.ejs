<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" />
	<link rel="stylesheet" type="text/css" href="/stylesheets/jquery-2.1.1.min.js" />

	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.js" />
    <title>Products</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
   
    <script src="main.js"></script>
</head>
<body>
    <h1>Products ...  <a href="/products/add_product">Add Product</a></h1>
  
    <table class="table-responsive" border="2">
        <tr>
            
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
         <% data.forEach(function(product){ %>
            
               <tr>
                   <td><%= product.p_name %></td>
                   <td><%= product.p_price %></td>
                   <td><%= product.p_category %></td>
                   <td><img width="100" height="100" src="/imgs/<%=product.p_img%>"/></td>
                   <td>
                       <a href="/products/delete/<%=product._id%>">Delete</a>
                       <a href="/products/edit/<%=product._id%>">Edit </a>
                
                </td>
                 
               </tr>
        <% })%>
        </table>
        
    <div>
        <% for(var i=1;i<=4;i++){%>

        
        <li> <a href="/product/products/<%=i%>"></a></li>
        <% }%>
    </div>
    </div>
</body>
</html>
