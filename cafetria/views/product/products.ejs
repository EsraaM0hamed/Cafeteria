<%include header.ejs %>
<div id="main">

    <link rel="stylesheet" href="/css/product.css">
    <h1>Products ...  <a href="/products/add_product">Add Product</a></h1><br/>
   
  <h3>
        <div id="secondDiv">
    <table id="products">
        <tr>
            
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
         <% data.forEach(function(product){ %>
            
               <tr>
                   <td><%= product.p_name %></td>
                   <td><%= product.p_price %></td>
                   <td><%= product.p_category %></td>
                   <td><img width="100" height="100" src="/imgs/<%=product.p_img%>"/></td>
                   <td>
                       <a href="/products/delete/<%=product._id%>">Delete</a>
                       <a href="/products/edit/<%=product._id%>">Edit </a>
                
                </td>
                 
               </tr>
        <% })%>
        </table>
        </div>
    
</h3>
</div>
